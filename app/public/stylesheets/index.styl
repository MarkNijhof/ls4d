
white = #f2f2f2
black = #2f3033
light-yellow = #dbc778
dark-yellow = #c0a747
yellow = #dfbb24

body
  margin 0px
  padding 0px
  font-family 'Open Sans Condensed', sans-serif
  color black

header
  position relative
  width 100%
  overflow hidden
  text-align center
  border 0px none white
  border-bottom 1px solid black

  background light-yellow
  background url('data:image/svg+xmlbase64,')
  background -moz-linear-gradient(top, light-yellow 0%, yellow 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,light-yellow), color-stop(100%,yellow))
  background -webkit-linear-gradient(top, light-yellow 0%,yellow 100%)
  background -o-linear-gradient(top, light-yellow 0%,yellow 100%)
  background -ms-linear-gradient(top, light-yellow 0%,yellow 100%)
  background linear-gradient(to bottom, light-yellow 0%,yellow 100%)
  filter "progid:DXImageTransform.Microsoft.gradient(startColorstr='light-yellow', endColorstr='yellow',GradientType=0)"


.banner
  position relative
  background-color yellow
  width 100%
  text-align center
  border 0px none white
  border-top 1px solid black
  border-bottom 1px solid black
  overflow visible

  .button
  	-moz-box-shadow inset 0px 1px 0px 0px #e6e6e6
  	-webkit-box-shadow inset 0px 1px 0px 0px #e6e6e6
  	box-shadow inset 0px 1px 0px 0px #e6e6e6
  	background -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #dbc778), color-stop(1, #c0a847) )
  	background -moz-linear-gradient( center top, #dbc778 5%, #c0a847 100% )
  	filter "progid:DXImageTransform.Microsoft.gradient(startColorstr='#dbc778', endColorstr='#c0a847')"
  	background-color #dbc778
  	-moz-border-radius 6px
  	-webkit-border-radius 6px
  	border-radius 6px
  	border 1px solid #696969
  	display inline-block
  	color #2f3033
  	font-family arial
  	font-size 1.4em
  	padding 12px 48px
  	text-decoration none
  	text-shadow 1px 1px 0px #dbdbdb
  	margin 10px
  .button:hover
  	background -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #c0a847), color-stop(1, #dbc778) )
  	background -moz-linear-gradient( center top, #c0a847 5%, #dbc778 100% )
  	filter "progid:DXImageTransform.Microsoft.gradient(startColorstr='#c0a847', endColorstr='#dbc778')"
  	background-color #c0a847
  .button:active
  	position relative
  	top 1px
  

.content-box
  position relative
  background-color white
  width 100%
  height auto
  text-align center
  border 0px none white

footer
  position relative
  text-align center
  border 0px none white
  border-top 1px solid black

  background yellow
  background url('data:image/svg+xmlbase64,')
  background -moz-linear-gradient(top, yellow 0%, light-yellow 67%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,yellow), color-stop(67%,light-yellow))
  background -webkit-linear-gradient(top, yellow 0%,light-yellow 67%)
  background -o-linear-gradient(top, yellow 0%,light-yellow 67%)
  background -ms-linear-gradient(top, yellow 0%,light-yellow 67%)
  background linear-gradient(to bottom, yellow 0%,light-yellow 67%)
  filter "progid:DXImageTransform.Microsoft.gradient(startColorstr='yellow', endColorstr='light-yellow',GradientType=0)"

h1, h2, h3, h4
  font-family 'Six Caps', sans-serif
  font-weight 400
  line-height 1em
  margin 0px
  text-transform uppercase

h1
  font-size 6em
  color white
  padding 10px 0px
  letter-spacing 10pt
  a
    text-decoration none
    color white
  a: hover
    text-decoration none
    color black

h2
  font-size 3em
  color black
  padding 10px 0px 20px
  letter-spacing 10pt

h3
  font-size 2em
  color black
  padding 10px 0px 20px
  letter-spacing 10pt

h4
  font-size 1em
  color black
  padding 10px 0px 20px
  letter-spacing 5pt

p
  font-family 'Open Sans Condensed', sans-serif
  font-size 1.2em
  font-weight 400
  line-height 1.6em
  margin 0px
  color black
  padding 10px 0px 20px

ul
  font-family 'Open Sans Condensed', sans-serif
  font-size 1.2em
  font-weight 400
  line-height 1.6em
  color black

.books
  position relative
  background-color white
  width 100%
  text-align center
  border 0px none white

.book-cover
  position relative
  width 400px
  border 0px none white
  margin 50px 20px

.content
  position relative
  margin 0px auto
  width 80%
  max-width 800px
  text-align left
  padding 10px 0px

  h2
    color black
    letter-spacing 3pt
    padding 10px 0px

  h3
    color black
    letter-spacing 2pt
    padding 10px 0px
    a
      color black
    a: hover
      color dark-yellow

  a
    text-decoration none
    color dark-yellow
  a: hover
    text-decoration none
    color black

